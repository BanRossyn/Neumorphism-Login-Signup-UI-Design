<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF3F8"
    tools:context=".MainActivity">

    <soup.neumorphism.NeumorphTextView

        android:id="@+id/neumorphTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ban Rossyn"
        android:textColor="#807E7E"
        android:textSize="40sp"
        android:textStyle="bold"
        android:alpha=".7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btn_toast"
        style="@style/Widget.Neumorph.Button.new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Toast"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="30dp"
        android:textColor="#0B0D0C"
        app:layout_constraintEnd_toEndOf="@+id/neumorphTextView"
        app:layout_constraintStart_toStartOf="@+id/neumorphTextView"
        app:layout_constraintTop_toBottomOf="@+id/neumorphTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>